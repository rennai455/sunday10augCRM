# Example .env file for renn-ai-crm
# Copy to .env and fill in your secrets

# --- Local development (no SSL) ---
NODE_ENV=development
PORT=3002
DATABASE_URL=postgres://youruser:yourpass@localhost:5432/renn_ai
PG_SSL=false
JWT_SECRET=<run `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`>
WEBHOOK_SECRET=<run `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`>
ALLOWED_ORIGINS=http://localhost:3000,https://your-railway-app.up.railway.app
ENABLE_SELF_SIGNUP=false
ALLOWED_SIGNUP_DOMAINS=renn.ai

# --- Railway/Production (SSL required) ---
# DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require
# NODE_ENV=production
# JWT_SECRET=<generated-hex>
# WEBHOOK_SECRET=<generated-hex>
# ALLOWED_ORIGINS=https://your-railway-app.up.railway.app
# ENABLE_SELF_SIGNUP=false
# ALLOWED_SIGNUP_DOMAINS=renn.ai

# If your password contains @:/?#, URL-encode it (e.g. %40 for @)

# Optional seed admin for db/seed.js
SEED_ADMIN_EMAIL=admin@renn.ai
SEED_ADMIN_PASSWORD=rennsecure123
