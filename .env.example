# Local development
NODE_ENV=development
PORT=3005

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/renn_ai
PG_SSL=false  # set true in production (e.g. Railway) if provider requires SSL

# Secrets (replace in Railway)
JWT_SECRET=REPLACE_WITH_RANDOM_32B_BASE64
WEBHOOK_SECRET=REPLACE_WITH_RANDOM_32B_BASE64
# Optional: additional secrets for rotation (comma-separated). First match wins.
WEBHOOK_SECRETS=

# CORS (adjust as needed)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Dev seeds (never use in prod)
SEED_ADMIN_EMAIL=admin@renn.ai
SEED_ADMIN_PASSWORD=changeme

# Optional Redis for production rate limiting and replay guard
# REDIS_URL=redis://default:password@localhost:6379

# Optional rate limit tuning (defaults shown)
# API_RATE_WINDOW_MS=900000
# API_RATE_MAX=1000
# AUTH_RATE_WINDOW_MS=900000
# AUTH_RATE_MAX=10

# Observability (optional)
# SENTRY_DSN=
# OTEL_EXPORTER_OTLP_ENDPOINT=
# OTEL_SERVICE_NAME=renn-ai-crm

# Postgres pool tuning / features
# PG_POOL_MAX=10
# PG_IDLE_TIMEOUT_MS=30000
# PG_ENABLE_RLS=false
