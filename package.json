    "debug": "^4.4.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "redis": "^5.7.0",
    "tailwindcss": "^4.1.11"
  },
  "description": "",
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@lhci/cli": "^0.15.1",
    "concurrently": "^9.2.0",
    "critical": "^7.2.1",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "lighthouse-ci": "^1.13.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
