{
  "name": "renn-ai-crm",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run test:jest",
    "test:jest": "jest --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:all": "npm-run-all css:lint css:build test test:lighthouse test:visual",
    "coverage": "jest --coverage --runInBand",
    "start": "node server.js",
    "dev": "concurrently \"npm run css:watch\" \"npm run server:dev\" \"npm run live-server\"",
    "server:dev": "nodemon server.js",
    "live-server": "live-server --port=3001 --no-browser",
    "css:watch": "postcss styles/main.css -o public/dist/main.css --watch",
    "css:build": "postcss styles/main.css -o public/dist/main.css",
    "css:lint": "stylelint 'styles/**/*.css' --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "build": "npm-run-all css:build js:build",
    "js:build": "esbuild public/scripts/app.js --bundle --format=iife --external:web-vitals --outfile=public/dist/app.js",
    "test:lighthouse": "lhci autorun",
    "test:visual": "backstop test",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "node db/run-migrations.js",
    "db:seed": "node db/seed.js",
    "db:prepare": "node db/run-migrations.js && node db/seed.js",
    "migrate:pg:up": "node-pg-migrate up -m db/migrations -d $DATABASE_URL",
    "migrate:pg:down": "node-pg-migrate down -m db/migrations -d $DATABASE_URL",
    "db:rls": "node scripts/enable-rls.js",
    "diagnostics": "node scripts/diagnostics.js",
    "diagnostics:prod": "npm install --dev && node scripts/diagnostics.js",
    "schemas": "node scripts/gen-schemas.js",
    "openapi": "node scripts/gen-openapi.js",
    "smoke": "node scripts/smoke.js",
    "smoke:direct": "node scripts/smoke-direct.js",
    "audit": "npm audit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "npm run build && npm run openapi",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "@sentry/node": "^8.28.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "debug": "^4.4.1",
    "dotenv": "^17.2.1",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.1.0",
    "rate-limit-redis": "^1.7.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "postcss": "^8.5.6",
    "prom-client": "^15.1.2",
    "tailwindcss": "^4.1.11",
    "cookie-parser": "^1.4.6",
    "redis": "^4.6.13",
    "zod": "^3.23.8",
    "@opentelemetry/sdk-node": "^0.55.0",
    "@opentelemetry/auto-instrumentations-node": "^0.55.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.55.0"
  },
  "description": "Prepared for GitHub import.",
  "devDependencies": {
    "node-pg-migrate": "^7.6.2",
    "zod-to-json-schema": "^3.23.5",
    "esbuild": "^0.21.5",
    "@axe-core/cli": "^4.10.2",
    "@eslint/js": "^9.13.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@lhci/cli": "^0.15.1",
    "concurrently": "^9.2.0",
    "critical": "^7.2.1",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.6",
    "jest": "^30.1.2",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^15.2.10",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.23.0",
    "stylelint-config-standard": "^39.0.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20 <23"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
